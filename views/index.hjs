<!DOCTYPE html>
<html ng-app="velo">
  	<head>
	  	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">


	    <title><% title %></title>
	    <link rel='stylesheet' href='/stylesheets/style.css' />
	    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.8/angular.min.js"></script>
	    <script type="text/javascript" src="/javascripts/ang.js"></script>

		<!--Latest compiled and minified CSS -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    </head>
	<body>
	  	<nav class="navbar navbar-inverse navbar-fixed-top">
			<div class="container">
	        	<div class="navbar-header">
	          		<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
		            <span class="sr-only">Toggle navigation</span>
		            <span class="icon-bar"></span>
		            <span class="icon-bar"></span>
		            <span class="icon-bar"></span>
		        	</button>
	          		<a class="navbar-brand" href="#"><% titleShort %></a>
	        	</div>

		        <div id="navbar" class="collapse navbar-collapse">
		          	<ul class="nav navbar-nav">
		            	<li class="active"><a href="#">Home</a></li>
		            	<li><a href="#contact">Contact</a></li>
		            	<li><a href="#footer">footer</a></li>
		          	</ul>
		        </div><!--/.nav-collapse -->
	      	</div><!--/container -->
	    </nav><!--/nav -->

	    <div class="container">

			<div class="container top_heading">
		  		<h1><% title %></h1>
		  		<p class="lead"><% article %></p>
		  		<p>...</p>
		  		<p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a></p>
		  	</div>

		  	<div class="tab" ng-controller="TabController as tab">
		  		<ul class="nav nav-pills">
			  		<li ng-class="{active:tab.isSet(1)}"> 
			  		<a href ng-click="tab.setTab(1)">Road</a> 
			  		</li>
			  		<li ng-class="{active:tab.isSet(2)}"> 
			  		<a href ng-click="tab.setTab(2)">Mountain</a> 
			  		</li>
		  		</ul>
		  		<div ng-show="tab.isSet(1)">
		  			<h2>This is the Road Tab</h2>
		  			<p class="lead">...</p>
		  		</div>
		  		<div ng-show="tab.isSet(2)">
		  			<h2>This is the Mountain Tab</h2>
		  			<p class="lead">...</p>
		  		</div>
		  	</div>

	    	<div class="container" ng-controller="FeatureController as feature">
	      		<h3 class="text-uppercase"><% joinTitle %></h3>
	      		<h1 class="lead"><% joinSubTitle %></h1>
	      		<div class="row">
			  		<div class="col-md-4" ng-repeat="excerpt in feature.excerpts">
			  			<h2 class="text-left">{{ excerpt.title }}</h2>
			  			<p class="lead text-left">{{ excerpt.description }}</p>
			  		</div>
				</div><!--/row class -->
			</div><!--/feature container -->	
			
			<div ng-controller="StaffController as staff">
				<h3 class="text-uppercase"><% membersTitle %></h3>
				<h1 class="lead"><% membersSubTitle %></h1>
				<div class="row">
					<div class="col-md-4" ng-repeat="person in staff.persons" >
					<h2>{{person.name}}</h2>
					<h3>{{person.title}}</h3>
					<p>{{person.description}}</p>
					<p>{{person.email}}</p>
					</div>
				</div>
			</div><!--/staff container -->

	    </div><!-- /.container -->
		
		<!--Footer Class -->
	     <footer class="footer" ><a name="footer"></a>
      		<div class="container">
        		<p class="text-muted">Velo Atlanta Cycling Club www.veloatlanta.com 2014 WebMaster Terms and Conditions</p>
      		</div><!--/container -->
    	</footer>

		<!--/Modules and Libraries -->
	    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
	    <script src="http://code.jquery.com/jquery-1.11.2.min.js"></script>
		<!-- Latest compiled and minified JavaScript -->
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
	</body>
</html>

